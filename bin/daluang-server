#!/usr/bin/python

import sys
import getopt

from daluang import server

optlist, args = getopt.getopt(sys.argv[1:], 'p:a:')

port = 8000
addr = '0.0.0.0'

for k, v in optlist:
	if k == '-p':
		port = int(v)
	elif k == '-a':
		addr = v

print "Starting Daluang server at %s:%d.." % (addr, port)
server.start(port=port, addr=addr)

